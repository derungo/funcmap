{
  "name": "funcmap",
  "displayName": "AI Contextual Linking & Execution System",
  "description": "Create a pre-indexed, AI-queryable function registry for enhanced AI-assisted development",
  "version": "0.1.0",
  "publisher": "derungo",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/derungo/funcmap.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "function",
    "mapping",
    "dependencies",
    "contextual"
  ],
  "activationEvents": [
    "onCommand:aiContextualLinking.updateIndex",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiContextualLinking.updateIndex",
        "title": "AI Contextual Linking: Update Index"
      },
      {
        "command": "aiContextualLinking.getFunctionData",
        "title": "AI Contextual Linking: Get Function Data"
      },
      {
        "command": "aiContextualLinking.findDependentFunctions",
        "title": "AI Contextual Linking: Find Dependent Functions"
      },
      {
        "command": "aiContextualLinking.findRelatedFunctions",
        "title": "AI Contextual Linking: Find Related Functions"
      },
      {
        "command": "aiContextualLinking.findFunctionsByExecToken",
        "title": "AI Contextual Linking: Find Functions By Execution Token"
      }
    ],
    "configuration": {
      "title": "AI Contextual Linking",
      "properties": {
        "aiContextualLinking.watchFiles": {
          "type": "boolean",
          "default": true,
          "description": "Watch files for changes and update index automatically"
        },
        "aiContextualLinking.filePatterns": {
          "type": "array",
          "default": [
            "**/*.js",
            "**/*.ts",
            "**/*.jsx",
            "**/*.tsx"
          ],
          "description": "File patterns to include in scanning"
        },
        "aiContextualLinking.storageType": {
          "type": "string",
          "enum": [
            "json",
            "sqlite"
          ],
          "default": "json",
          "description": "Storage type for the function registry (json or sqlite)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./src/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "better-sqlite3": "^11.9.0",
    "sqlite3": "^5.1.7"
  }
}
