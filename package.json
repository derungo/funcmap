{
  "name": "ai-contextual-linking",
  "displayName": "AI Contextual Linking & Execution System",
  "description": "Create a pre-indexed, AI-queryable function registry for enhanced AI-assisted development",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Machine Learning"
  ],
  "activationEvents": [
    "onCommand:aiContextualLinking.updateIndex",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiContextualLinking.updateIndex",
        "title": "AI Contextual Linking: Update Index"
      }
    ],
    "configuration": {
      "title": "AI Contextual Linking",
      "properties": {
        "aiContextualLinking.watchFiles": {
          "type": "boolean",
          "default": true,
          "description": "Watch files for changes and update index automatically"
        },
        "aiContextualLinking.filePatterns": {
          "type": "array",
          "default": ["**/*.js", "**/*.ts", "**/*.jsx", "**/*.tsx"],
          "description": "File patterns to include in scanning"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
} 