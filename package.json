{
  "name": "funcmap",
  "displayName": "FuncMap",
  "description": "AI-queryable function registry for enhanced development",
  "version": "0.2.0",
  "publisher": "derungo",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/derungo/funcmap.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "function",
    "mapping",
    "dependencies",
    "contextual"
  ],
  "activationEvents": [
    "onCommand:funcmap.updateIndex",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "funcmap.updateIndex",
        "title": "FuncMap: Update Index"
      },
      {
        "command": "funcmap.getFunctionData",
        "title": "FuncMap: Get Function Data"
      },
      {
        "command": "funcmap.findDependentFunctions",
        "title": "FuncMap: Find Dependent Functions"
      },
      {
        "command": "funcmap.findRelatedFunctions",
        "title": "FuncMap: Find Related Functions"
      },
      {
        "command": "funcmap.findFunctionsByExecToken",
        "title": "FuncMap: Find Functions By Execution Token"
      }
    ],
    "configuration": {
      "title": "FuncMap",
      "properties": {
        "funcmap.watchFiles": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable automatic file watching for index updates"
        },
        "funcmap.filePatterns": {
          "type": "array",
          "default": [
            "**/*.js",
            "**/*.ts",
            "**/*.jsx",
            "**/*.tsx"
          ],
          "description": "File patterns to include in the index scan"
        },
        "funcmap.storageType": {
          "type": "string",
          "default": "json",
          "enum": [
            "json",
            "sqlite"
          ],
          "description": "Storage type for the function registry (json or sqlite)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./src/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.24",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "mocha": "^10.3.0",
    "typescript": "^5.3.3",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "better-sqlite3": "^11.9.0"
  }
}
